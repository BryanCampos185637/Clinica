@model DataAccessLogic.LogicaUsuario.ModificarUsuario.Ejecuta

@{
    ViewData["Title"] = "Editar";
}


<div class="row">
    <div class="col-12 mt-md-3">
        <div class="text-center">
            <h4>@ViewData["Title"] usuario</h4>
            <h6>Sistema de clinica <strong>Versión: Beta</strong></h6>
        </div>
    </div>
    <div class="offset-lg-3 offset-md-3 col-lg-6 col-md-6 col-sm-12 mt-2">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UsuarioId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contra" class="control-label"></label>
                <input asp-for="Contra" class="form-control" />
                <span asp-validation-for="Contra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUsuarioId" class="control-label"></label>
                <select asp-for="TipoUsuarioId" class="form-control" id="TipoUsuarioId">
                    @if (Model.ListatipoUsuarios != null && Model.ListatipoUsuarios.Count > 0)
                    {
                        <option value="">--Selecciona una opcion--</option>
                        @foreach (var item in Model.ListatipoUsuarios)
                        {
                            <option value="@item.TipoUsuarioId">@item.NombreTipoUsuario: @item.DescripcionTipoUsuario</option>
                        }
                    }
                </select>
                <span asp-validation-for="TipoUsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                <a asp-action="Index" class="btn btn-danger btn-block">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}