@model DataAccessLogic.LogicaExpediente.ModificarExpediente.Ejecuta

@{
    ViewData["Title"] = "Editar";
}


<div class="row">
    <div class="offset-lg-3 offset-md-3 col-lg-6 col-md-6 col-sm-12 mt-2">
        <div class="card animated fadeInLeft">
            <div class="card-body">
                <div class="text-center">
                    <h4>@ViewData["Title"] expediente</h4>
                    <h6>Sistema de clinica <strong>Versión: Beta</strong></h6>
                </div>
                <form asp-action="Editar" class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="ExpedienteId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="PacienteId" class="control-label"></label>
                        <select asp-for="PacienteId" class="form-control">
                            @if (Model.ListaPaciente != null || Model.ListaPaciente.Count > 0)
                            {
                                @foreach (var item in Model.ListaPaciente)
                                {
                                    if (item.PacienteId == Model.PacienteId)
                                    {
                                        <option value="@item.PacienteId">@item.NombrePaciente @item.ApellidoPaciente</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="PacienteId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnfermedadId" class="control-label"></label>
                        <select asp-for="EnfermedadId" class="form-control">
                            @if (Model.ListaEnfermedad != null || Model.ListaEnfermedad.Count > 0)
                            {
                                <option value="">--selecciona una opcion--</option>
                                @foreach (var item in Model.ListaEnfermedad)
                                {
                                    <option value="@item.EnfermedadId">@item.NombreEnfermedad</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="EnfermedadId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger mt-md-1">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
