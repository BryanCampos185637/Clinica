@model DataAccessLogic.Seguridad.ValidacionSesion.Ejecuta
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand text-light" href="#"><strong>Versión: Beta</strong></a>
        </div>
    </nav>
    <div class="container align-items-center">
        <div class="row">
            <div class="col-12 mt-md-3">
                <div class="text-center">
                    <h1>Inicie sesión</h1>
                    <h5>Sistema de clinica <strong>Versión: Beta</strong></h5>
                </div>
            </div>
            <div class="offset-lg-4 offset-md-4 col-lg-4 col-md-4 col-sm-12 mt-2">
                <form asp-action="Login" method="post" id="frmLogin">
                    <div class="text-center">
                        @if (TempData["success"] != null)
                        {
                            <span class="text-danger">@TempData["success"]</span>
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreUsuario"></label>
                        <input asp-for="NombreUsuario" class="form-control" placeholder="Escribe tu correo electronico" autofocus/>
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contra"></label>
                        <input asp-for="Contra" class="form-control" placeholder="Escribe tu contraseña" />
                        <span asp-validation-for="Contra" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Entrar" class="btn btn-primary btn-block" /><br />
                        <span>No tienes cuenta registrate <a asp-action="Registrar">Aqui</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
