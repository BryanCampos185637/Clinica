@model DataAccessLogic.Seguridad.RegistrarIdentity.Ejecuta

@{
    ViewData["Title"] = "Registrar";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Registrar</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="#"><strong>Versión: Beta</strong></a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-md-3">
                <div class="text-center">
                    <h1>Formulario de registro</h1>
                    <h5>Sistema de clinica <strong>Versión: Beta</strong></h5>
                </div>
            </div>
            <div class="offset-lg-4 offset-md-4 col-lg-4 col-md-4 col-sm-12 mt-2">
                <form asp-action="Registrar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Usuario" class="control-label"></label>
                        <input asp-for="Usuario" class="form-control" placeholder="Escribe tu nombre de usuario" />
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Escribe tu correo electronico" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" placeholder="Escribe tu contraseña" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                        <a asp-action="Login" class="btn btn-danger btn-block">Regresar</a>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>

