@model DataAccessLogic.Seguridad.ValidacionSesion.Ejecuta
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Login</title>
    <style>
        .card {
            margin-top: 15%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="offset-lg-3 offset-md-3 col-lg-6 col-md-6 col-sm-12">
                <div class="card">
                    <form asp-action="Login" method="post">
                        <div class="card-header">
                            <h5>Inicie sesión</h5>
                        </div>
                        <div class="card-body">
                            @if (TempData["success"] != null)
                            {
                                <span class="text-danger">@TempData["success"]</span>
                            }
                            <div class="form-group">
                                <label asp-for="NombreUsuario"></label>
                                <input asp-for="NombreUsuario" class="form-control" />
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contra"></label>
                                <input asp-for="Contra" class="form-control" />
                                <span asp-validation-for="Contra" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <input type="submit" value="Entrar" class="btn btn-primary" /><br />
                            <span>No tienes cuenta registrate <a asp-action="Registrar">Aqui</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
