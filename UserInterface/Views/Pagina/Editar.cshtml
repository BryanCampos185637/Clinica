@model DataAccessLogic.LogicaRoles.ModificarPagina.Ejecuta

@{
    ViewData["Title"] = "Modificar pagina";
}


<div class="row">
    <div class="offset-lg-3 offset-md-3 col-lg-6 col-md-6 col-sm-12 mt-2">
        <div class="card animated fadeInLeft">
            <div class="card-body">
                <div class="text-center">
                    <h4>@ViewData["Title"]</h4>
                    <h6>Sistema de clinica <strong>Versión: Beta</strong></h6>
                </div>
                <form asp-action="Editar" class="mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombrePagina" class="control-label"></label>
                        <input asp-for="NombrePagina" class="form-control" />
                        <span asp-validation-for="NombrePagina" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Accion" class="control-label"></label>
                        <input asp-for="Accion" class="form-control" />
                        <span asp-validation-for="Accion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Controlador" class="control-label"></label>
                        <input asp-for="Controlador" class="form-control" />
                        <span asp-validation-for="Controlador" class="text-danger"></span>
                    </div>
                    <input asp-for="PaginaId" class="form-control" type="hidden" />
                    <div class="form-group text-center">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary mt-md-1">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
